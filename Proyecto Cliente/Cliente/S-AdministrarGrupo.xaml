<Window x:Class="Proyecto_Cliente.Cliente.S_AdministrarGrupo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Cliente.Cliente"
        mc:Ignorable="d"
        Title="S_AdministrarGrupo" Height="550" Width="900">
    <Grid Height="550" Width="900">
        <Label FontSize="25" Margin="400,10,400,496">Grupos</Label>

        <DataGrid Name="dgGrupos" AutoGenerateColumns="False" IsReadOnly="True" Margin="50,88,415,123">
            <DataGrid.Columns>
                <DataGridTextColumn
                                Width="*"
                                Binding="{Binding semestre}"
                                Header="Semestre" />
                <DataGridTextColumn
                                Width="*"
                                Binding="{Binding bloque}"
                                Header="Bloque" />
                <DataGridTextColumn
                                Width="*"
                                Binding="{Binding vNombreArea}"
                                Header="Area" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
