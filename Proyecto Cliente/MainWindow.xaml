<Window x:Class="Proyecto_Cliente.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Cliente"
        mc:Ignorable="d"
        Title="Login" Height="530" Width="800">
    <Grid Height="530" Width="800">
        <Image Source="/Images/InicioSesion.png" Margin="-33,-20,-67,10"></Image>
        <TextBlock FontSize="30" Margin="459,84,161,405" Foreground="White">Iniciar sesion</TextBlock>

        <Label FontSize="20" Foreground="White" Margin="498,143,196,349">Matricula</Label>
        <TextBox x:Name="tbMatricula" FontSize="20" Margin="404,186,95,308"/>

        <Label FontSize="20" Foreground="White" Margin="490,231,196,261">Contraseña</Label>
        <PasswordBox x:Name="psbContrasenia" MaxLength="16" FontSize="20" Margin="404,274,95,215"/>

        <Button FontSize="20" Background="LightGreen" Click="Button_IniciarSesion" Margin="405,335,95,136" Foreground="Black">Entrar</Button>
        <Button FontSize="15" Background="LightGray" Click="Button_Cancelar" Margin="690,441,28,46">Salir</Button>

    </Grid>
</Window>
